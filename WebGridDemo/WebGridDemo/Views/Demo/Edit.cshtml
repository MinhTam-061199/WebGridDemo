@model WebGridDemo.Models.Product
@{
    Layout = null;

}
@using (Html.BeginForm())
{
<div class="container">
    <h2>Edit </h2>
    <div class="form-group">
        ID: @Html.TextBoxFor(x => x.ProductId, new { @class = "form-controller" })

    </div>
    <div class="form-group">
        Name: @Html.TextBoxFor(x => x.Name, new { @class = "form-controller" })

    </div>
    <div class="form-group">
        Price: @Html.TextBoxFor(x => x.Price, new { @class = "form-controller" })

    </div>
    <div class="form-group">

        <button class="btn btn-success"> Edit </button>
    </div>
</div>
}